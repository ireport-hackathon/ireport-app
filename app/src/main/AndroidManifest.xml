<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackaton.android.com.ireport">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- providing permission for both providers -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> <!-- used when we use network location  -->
    <uses-permission android:name="android.permission.INTERNET"/> <!-- permission is must for the use of network provide -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Dashboard"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddReport"
            android:label="@string/title_activity_add_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewReports"
            android:label="@string/title_activity_view_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Instructions"
            android:label="@string/title_activity_instructions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppFullScreenTheme">

            <!-- android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login"></activity>

    </application>

</manifest>
